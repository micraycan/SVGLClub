<MudAppBar Color="Color.Primary" Fixed="true" Dense="true" Elevation="1">
	<MudContainer Class="d-flex align-items-center">
		<MudHidden Breakpoint ="Breakpoint.MdAndUp">
			<MudMenu Dense="true" Variant="Variant.Text" Size="Size.Medium" Color="Color.Inherit" Icon="@Icons.Material.Filled.Menu">
				<MudMenuItem Href="/" ForceLoad="true" Icon="@Icons.Material.Filled.Dashboard" IconColor="Color.Inherit" Label="Dashboard" />
				<MudMenuItem Href="/trackleaderboard" ForceLoad="true" Icon="@Icons.Material.Filled.TrackChanges" IconColor="Color.Inherit" Label="Track Leaderboard" />
				<MudMenuItem Href="/driverstats" ForceLoad="true" Icon="@Icons.Material.Filled.SportsMotorsports" IconColor="Color.Inherit" Label="Driver Stats" />
			</MudMenu>
		</MudHidden>
		<MudHidden Breakpoint="Breakpoint.SmAndDown">
			<MudContainer Class="d-flex align-items-center">
				<MudButton Href="/" StartIcon="@Icons.Material.Filled.Dashboard" Color="Color.Inherit">Dashboard</MudButton>
				<MudButton Href="/trackleaderboard" StartIcon="@Icons.Material.Filled.TrackChanges" Color="Color.Inherit">Track Leaderboard</MudButton>
				<MudButton Href="/driverstats" StartIcon="@Icons.Material.Filled.SportsMotorsports" Color="Color.Inherit">Driver Stats</MudButton>
			</MudContainer>
		</MudHidden>
	</MudContainer>
</MudAppBar>